<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_trainer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                tools:ignore="ImageContrastCheck" />
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:text="@string/tv_trainer"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_schedule_training_date_time"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="TextContrastCheck" />
                <TextView
                    android:id="@+id/tv_schedule_training_trainer"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_schedule_training_trainer"
                    app:layout_constraintVertical_bias="0.0" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:text="@string/tv_time"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_schedule_training_date_time"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="TextContrastCheck" />
                <TextView
                    android:id="@+id/tv_schedule_training_date_time"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_schedule_training_date_time"
                    app:layout_constraintVertical_bias="0.0" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_registration"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/iv_write"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>